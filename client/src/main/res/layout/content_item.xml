<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_margin="4dp"
    android:id="@+id/parent_layout">

    <ImageView
        android:src="@drawable/content_circle"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="90dp">

        <TextView
            android:id="@+id/content_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="O filme do Boda: A pre-sequela"
            android:textAlignment="textStart"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/content_item_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Action, Sci-Fi"
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/content_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Year and length for example"
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />
    </LinearLayout>



</android.support.v7.widget.CardView>